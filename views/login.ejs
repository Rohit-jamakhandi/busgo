<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card fade-in">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <div style="font-size: 3rem;">🔐</div>
            <h1 class="h3 mt-3" style="color: #667eea; font-weight: 700;">Welcome Back!</h1>
            <p class="text-muted">Login to continue booking</p>
          </div>
          <form action="/auth/login" method="post">
            <div class="mb-3">
              <label class="form-label">📧 Email Address</label>
              <input type="email" class="form-control" name="email" placeholder="your@email.com" required />
            </div>
            <div class="mb-3">
              <label class="form-label">🔒 Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter your password" required />
            </div>
            <button class="btn btn-primary w-100 btn-lg mt-3">Login</button>
          </form>
          <hr class="my-4">
          <p class="text-center text-muted mb-0">Don't have an account? <a href="/signup" style="color: #667eea; font-weight: 600;">Sign Up</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
