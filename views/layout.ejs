<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %>BusGo - Book Bus Tickets Online</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/public/css/style.css" rel="stylesheet" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">BusGo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarsExample">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center gap-2" href="/">
              <i data-lucide="home" style="width: 18px; height: 18px;"></i> 
              <span data-i18n="home">Home</span>
            </a>
          </li>
          <% if (user && user.isAdmin) { %>
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center gap-2" href="/admin">
                <i data-lucide="settings" style="width: 18px; height: 18px;"></i> 
                <span data-i18n="admin">Admin</span>
              </a>
            </li>
          <% } %>
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center gap-2" href="/bookings/my">
                <i data-lucide="ticket" style="width: 18px; height: 18px;"></i> 
                <span data-i18n="myBookings">My Bookings</span>
              </a>
            </li>
          <% } %>
        </ul>
        <ul class="navbar-nav ms-auto align-items-center">
          <!-- Language Selector -->
          <li class="nav-item me-3">
            <div class="dropdown">
              <button class="btn btn-sm btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2 lang-switcher" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="Select Language 🌐">
                <i data-lucide="globe" style="width: 16px; height: 16px;"></i>
                <span id="currentLang">English</span>
              </button>
              <ul class="dropdown-menu dropdown-menu-end language-dropdown" aria-labelledby="languageDropdown">
                <li><a class="dropdown-item lang-item" href="#" onclick="changeLanguage('en')">
                  <span class="flag-icon">🇬🇧</span>
                  <span>English</span>
                </a></li>
                <li><a class="dropdown-item lang-item" href="#" onclick="changeLanguage('kn')">
                  <span class="flag-icon">🇮🇳</span>
                  <span>ಕನ್ನಡ (Kannada)</span>
                </a></li>
                <li><a class="dropdown-item lang-item" href="#" onclick="changeLanguage('hi')">
                  <span class="flag-icon">🇮🇳</span>
                  <span>हिंदी (Hindi)</span>
                </a></li>
                <li><a class="dropdown-item lang-item" href="#" onclick="changeLanguage('te')">
                  <span class="flag-icon">🇮🇳</span>
                  <span>తెలుగు (Telugu)</span>
                </a></li>
                <li><a class="dropdown-item lang-item" href="#" onclick="changeLanguage('ta')">
                  <span class="flag-icon">🇮🇳</span>
                  <span>தமிழ் (Tamil)</span>
                </a></li>
              </ul>
            </div>
          </li>
          
          <% if (!user) { %>
            <li class="nav-item"><a class="btn btn-outline-primary me-2" href="/login" data-i18n="login">Login</a></li>
            <li class="nav-item"><a class="btn btn-primary" href="/signup" data-i18n="signup">Sign Up</a></li>
          <% } else { %>
            <li class="nav-item me-3">
              <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600; display: flex; align-items-center; gap: 0.5rem;">
                <i data-lucide="user" style="width: 18px; height: 18px;"></i> <%= user.name %>
              </span>
            </li>
            <li class="nav-item">
              <form action="/auth/logout" method="post" style="display: inline;">
                <button class="btn btn-outline-danger btn-sm" data-i18n="logout">Logout</button>
              </form>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <% if (success_msg && success_msg.length) { %>
    <div class="container mt-3">
      <div class="alert alert-success alert-dismissible fade show">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (error_msg && error_msg.length) { %>
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <%- body %>

  <footer style="background: rgba(255,255,255,0.95); margin-top: 5rem; padding: 2rem 0; box-shadow: 0 -2px 20px rgba(0,0,0,0.1);">
    <div class="container text-center">
      <p class="mb-2 d-flex align-items-center justify-content-center gap-2" style="color: #667eea; font-weight: 600; font-size: 1.2rem;">
        <i data-lucide="bus" style="width: 24px; height: 24px;"></i> BusGo
      </p>
      <p class="text-muted mb-0">Your trusted bus booking partner | © 2025 All rights reserved</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://unpkg.com/@studio-freight/lenis@1.0.29/dist/lenis.min.js"></script>
  <script src="/public/js/translations.js"></script>
  <script src="/public/js/main.js"></script>
  <script>
    // Initialize Lucide icons
    lucide.createIcons();
    
    // Initialize Lenis smooth scrolling
    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smooth: true,
      smoothTouch: false,
    });

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }
    requestAnimationFrame(raf);
    
    // Language switcher - Native names
    const langNames = {
      'en': 'English',
      'kn': 'ಕನ್ನಡ',
      'hi': 'हिंदी',
      'te': 'తెలుగు',
      'ta': 'தமிழ்'
    };
    
    function changeLanguage(lang) {
      // Update language without affecting body opacity
      setLanguage(lang);
      // Show native language name on button
      document.getElementById('currentLang').textContent = langNames[lang];
      
      // Refresh icons after a short delay
      setTimeout(() => {
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        }
      }, 100);
    }
    
    // Set initial language display with native name
    document.addEventListener('DOMContentLoaded', () => {
      const currentLang = getCurrentLanguage();
      document.getElementById('currentLang').textContent = langNames[currentLang];
    });
  </script>
</body>
</html>
