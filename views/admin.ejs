<h1 class="h4 mb-3">Admin Dashboard</h1>
<div class="card mb-4">
  <div class="card-body">
    <h2 class="h6">Add Bus</h2>
    <form class="row g-2" action="/buses/admin" method="post">
      <div class="col-md-2"><input class="form-control" name="bus_id" placeholder="BUS123" required></div>
      <div class="col-md-3"><input class="form-control" name="bus_name" placeholder="Bus Name" required></div>
      <div class="col-md-2"><input class="form-control" name="from" placeholder="From" required></div>
      <div class="col-md-2"><input class="form-control" name="to" placeholder="To" required></div>
      <div class="col-md-1"><input type="date" class="form-control" name="date" required></div>
      <div class="col-md-1"><input type="time" class="form-control" name="time" required></div>
      <div class="col-md-1"><input type="number" min="1" class="form-control" name="seats_total" placeholder="Seats" required></div>
      <div class="col-md-1"><input type="number" min="0" class="form-control" name="available_seats" placeholder="Avail" required></div>
      <div class="col-md-1"><input type="number" min="0" class="form-control" name="fare" placeholder="Fare" required></div>
      <div class="col-12 text-end"><button class="btn btn-success">Add</button></div>
    </form>
  </div>
</div>

<h2 class="h6">Manage Buses</h2>
<table class="table table-sm align-middle">
  <thead>
    <tr><th>ID</th><th>Name</th><th>Route</th><th>Date/Time</th><th>Seats</th><th>Fare</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% (buses||[]).forEach(b => { %>
    <tr>
      <td><%= b.bus_id %></td>
      <td>
        <form class="row g-2" action="/buses/admin/<%= b._id %>" method="post">
          <div class="col-md-3"><input class="form-control form-control-sm" name="bus_name" value="<%= b.bus_name %>"></div>
          <div class="col-md-2"><input class="form-control form-control-sm" name="from" value="<%= b.from %>"></div>
          <div class="col-md-2"><input class="form-control form-control-sm" name="to" value="<%= b.to %>"></div>
          <div class="col-md-2"><input type="date" class="form-control form-control-sm" name="date" value="<%= b.date %>"></div>
          <div class="col-md-2"><input type="time" class="form-control form-control-sm" name="time" value="<%= b.time %>"></div>
          <div class="col-md-1"><input type="number" class="form-control form-control-sm" name="seats_total" value="<%= b.seats_total %>"></div>
          <div class="col-md-1"><input type="number" class="form-control form-control-sm" name="available_seats" value="<%= b.available_seats %>"></div>
          <div class="col-md-1"><input type="number" class="form-control form-control-sm" name="fare" value="<%= b.fare %>"></div>
          <div class="col-md-2 text-end">
            <button class="btn btn-sm btn-primary">Save</button>
          </div>
        </form>
      </td>
      <td colspan="5" class="text-end">
        <form class="d-inline" action="/buses/admin/<%= b._id %>/delete" method="post">
          <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this bus?')">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
